<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My catalog</title>
    <link href="/style.css" rel="stylesheet" type="text/css">
    <link href="/beats.css" rel="stylesheet" type="text/css">
</head>
<body>
    <header>
        <%- include('../partials/_navbar.ejs') %>
    </header>
    <main>
        <h1>My Beats</h1><br>
        <ul>
            <% catalog.forEach((beat) => { %>
                <li>
                    <a href="/users/<%= user._id %>/beats/<%= beat._id %>/edit" class="text-button" id="title"><%= beat.title %></a>
                    <span id="genre"><%= beat.genre %></span>
                    <span id="tempo"><%= beat.tempo + ' bpm' %></span>
                    <span id="key"><%= beat.keyLetter + beat.keyAccidental + ' ' + beat.keyScale%></span>
                    <% if (beat.price === 0) { %>
                        <span class="price">Free</span>
                    <% } else { %>
                        <span class="price"><%= '$' + beat.price %></span>
                    <% } %>
                </li>
            <% }); %>
        </ul>
    </main>
</body>
</html>